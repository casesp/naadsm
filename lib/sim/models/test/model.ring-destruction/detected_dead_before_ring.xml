<?xml version="1.0" encoding="UTF-8"?>
<naadsm:disease-simulation
  xmlns:naadsm="http://www.naadsm.org/schema"
  xmlns:xdf="http://xml.gsfc.nasa.gov/XDF">
  <description>Specs for a sample simulation run.</description>
  <num-days>10</num-days>
  <num-runs>1</num-runs>

  <models>

    <disease-model production-type="Cattle">
      <latent-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <mortality>1.0</mortality>
      <immunity-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <disease-model production-type="Pigs">
      <latent-period>
        <point>2</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>2</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <!-- With all probabilities at 1.0, a herd will be detected the instant it
      shows clinical signs or mortality. -->
    <detection-model>
      <prob-detect-vs-time-clinical>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-detect-vs-time-clinical>
      <prob-detect-vs-time-dead>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-detect-vs-time-dead>
      <prob-report-clinical-signs-vs-time-since-outbreak>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-clinical-signs-vs-time-since-outbreak>
    </detection-model>

    <resources-and-implementation-of-controls-model>
      <!-- "Unlimited" destruction resources. -->
      <destruction-program-delay>
        <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
      </destruction-program-delay>
      <destruction-capacity>
        <value>0</value> <value>1000</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </destruction-capacity>
      <destruction-priority-order>
        reason,time waiting,production type
      </destruction-priority-order>
      <!-- No vaccination. -->
      <vaccination-program-delay>1</vaccination-program-delay>
      <vaccination-capacity>
        <value>0</value> <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </vaccination-capacity>
      <vaccination-priority-order>
        reason,time waiting,production type
      </vaccination-priority-order>
    </resources-and-implementation-of-controls-model>

    <basic-destruction-model production-type="Cattle">
      <priority>1</priority>
    </basic-destruction-model>

    <basic-destruction-model production-type="Pigs">
      <priority>2</priority>
    </basic-destruction-model>

    <!-- When a diseased pig unit is detected, other herds within 2 km will be
      destroyed. -->
    <ring-destruction-model from-production-type="Pigs" to-production-type="Cattle">
      <priority>3</priority>
      <radius>
        <value>2</value>
        <units><xdf:unit>km</xdf:unit></units>
      </radius>
    </ring-destruction-model>

    <ring-destruction-model from-production-type="Pigs" to-production-type="Pigs">
      <priority>4</priority>
      <radius>
        <value>2</value>
        <units><xdf:unit>km</xdf:unit></units>
      </radius>
    </ring-destruction-model>

    <destruction-list-monitor>
      <output>
        <variable-name>deswU</variable-name>
        <frequency>daily</frequency>
      </output>
    </destruction-list-monitor>

    <destruction-monitor>
      <output>
        <variable-name>desnU</variable-name>
        <frequency>daily</frequency>
      </output>
    </destruction-monitor>

    <conflict-resolver />

    <full-table-writer />

  </models>

</naadsm:disease-simulation>
