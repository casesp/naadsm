<?xml version="1.0" encoding="UTF-8"?>
<naadsm:disease-simulation
  xmlns:naadsm="http://www.naadsm.org/schema"
  xmlns:xdf="http://xml.gsfc.nasa.gov/XDF">
  <description>Specs for a sample simulation run.</description>
  <num-days>20</num-days>
  <num-runs>1</num-runs>

  <models>

    <disease-model> <!-- production type omitte = applies to all production types -->
      <latent-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>5</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <!-- The parameters below will give 1 shipment per day, to a herd 10 km
      away. -->
    <contact-spread-model from-production-type="A" to-production-type="B" contact-type="direct">
      <fixed-movement-rate>
        <value>1</value>
        <units><xdf:unit power="-1">day</xdf:unit></units>
      </fixed-movement-rate>
      <distance>
        <point>10</point>
        <units><xdf:unit>km</xdf:unit></units>
      </distance>
      <!-- Shipping is instantaneous. -->
      <delay>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
      <!-- Contact always produces infection. -->
      <prob-infect>1.0</prob-infect>
      <!-- Movement is unaffected by public knowledge of an outbreak. -->
      <movement-control>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </movement-control>
      <latent-units-can-infect>false</latent-units-can-infect>
    </contact-spread-model>

    <!-- The parameters below will give 1 shipment per day, to a herd 10 km
      away. -->
    <contact-spread-model from-production-type="C" to-production-type="D" contact-type="direct">
      <fixed-movement-rate>
        <value>1</value>
        <units><xdf:unit power="-1">day</xdf:unit></units>
      </fixed-movement-rate>
      <distance>
        <point>10</point>
        <units><xdf:unit>km</xdf:unit></units>
      </distance>
      <!-- Shipping is instantaneous. -->
      <delay>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
      <!-- Contact always produces infection. -->
      <prob-infect>1.0</prob-infect>
      <!-- Movement is unaffected by public knowledge of an outbreak. -->
      <movement-control>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </movement-control>
      <latent-units-can-infect>false</latent-units-can-infect>
    </contact-spread-model>

    <!--
     | With both probabilities at 1.0, diseased units of type B and D will be
     | detected the instant they show clinical signs. -->
    <detection-model production-type="B">
      <prob-detect-vs-time-clinical>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-detect-vs-time-clinical>
      <prob-report-clinical-signs-vs-time-since-outbreak>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-clinical-signs-vs-time-since-outbreak>
    </detection-model>

    <detection-model production-type="D">
      <prob-detect-vs-time-clinical>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-detect-vs-time-clinical>
      <prob-report-clinical-signs-vs-time-since-outbreak>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-clinical-signs-vs-time-since-outbreak>
    </detection-model>

    <resources-and-implementation-of-controls-model>
      <!-- The authorities can begin a destruction program immediately. -->
      <destruction-program-delay>
        <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>	
      </destruction-program-delay>
      <!-- An "unlimited" number of units can be destroyed per day. -->
      <destruction-capacity>
        <value>0</value> <value>1000</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </destruction-capacity>
      <destruction-priority-order>
        reason,production type,time waiting
      </destruction-priority-order>

      <!-- Vaccination isn't used in this scenario. -->
      <vaccination-program-delay>1</vaccination-program-delay>
      <vaccination-capacity>
        <value>0</value> <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </vaccination-capacity>
      <vaccination-priority-order>
        reason,production type,time waiting
      </vaccination-priority-order>
    </resources-and-implementation-of-controls-model>

    <!-- Destruction: 4 production types x 2 reasons = 8 priorities.
      reason > production type > time waiting
      1 = basic, A
      2 = basic, B
      3 = basic, C
      4 = basic, D
      5 = trace direct, A
      6 = trace direct, B
      7 = trace direct, C
      8 = trace direct, D
    -->

    <!-- Diseased units will be destroyed. -->
    <basic-destruction-model production-type="A">
      <priority>1</priority>
    </basic-destruction-model>

    <basic-destruction-model production-type="B">
      <priority>2</priority>
    </basic-destruction-model>

    <basic-destruction-model production-type="C">
      <priority>3</priority>
    </basic-destruction-model>

    <basic-destruction-model production-type="D">
      <priority>4</priority>
    </basic-destruction-model>

    <!--
     | Record direct contacts to or from “B” units.  When a trace is requested,
     | there is a 1-day delay to retrieve records.
     +-->
    <contact-recorder-model production-type="B" contact-type="direct">
      <trace-period>
        <value>14</value>
        <units><xdf:unit>day</xdf:unit></units>
      </trace-period>
      <trace-success>1</trace-success>
      <trace-delay>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </trace-delay>
    </contact-recorder-model>

    <contact-recorder-model production-type="D" contact-type="direct">
      <trace-period>
        <value>14</value>
        <units><xdf:unit>day</xdf:unit></units>
      </trace-period>
      <trace-success>1</trace-success>
      <trace-delay>
        <point>2</point>
        <units><xdf:unit>day</xdf:unit></units>
      </trace-delay>
    </contact-recorder-model>

    <!-- When a diseased unit is detected, trace in direct contacts. -->
    <trace-model contact-type="direct" direction="in">
      <trace-period>
        <value>7</value>
        <units><xdf:unit>day</xdf:unit></units>
      </trace-period>
    </trace-model>

    <!-- Destroy units found by trace-in investigations. -->
    <trace-destruction-model production-type="A" contact-type="direct" direction="in">
      <priority>5</priority>
    </trace-destruction-model>

    <trace-destruction-model production-type="B" contact-type="direct" direction="in">
      <priority>6</priority>
    </trace-destruction-model>

    <trace-destruction-model production-type="C" contact-type="direct" direction="in">
      <priority>7</priority>
    </trace-destruction-model>

    <trace-destruction-model production-type="D" contact-type="direct" direction="in">
      <priority>8</priority>
    </trace-destruction-model>

    <conflict-resolver />

    <state-table-writer />

  </models>

</naadsm:disease-simulation>
